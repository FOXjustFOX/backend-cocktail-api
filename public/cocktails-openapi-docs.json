          "Margarita glass",
          "Martini Glass",
          "Balloon Glass",
          "Coupe Glass"
        ]
      },
      "IngredientType": {
        "type": "string",
        "nullable": true,
        "enum": [
          "Vodka",
          "Gin",
          "Rum",
          "Spirit",
          "Whisky",
          "Syrup",
          "Beer",
          "null",
          null,
          "Liqueur",
          "Bitter",
          "Brandy",
          "Cider",
          "Liquor",
          "Beverage",
          "Garnish",
