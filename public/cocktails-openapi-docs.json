        ]
      },
      "Ingredient": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": [
              10,
              11
            ]
          },
          "name": {
            "type": "string",
            "example": [
              "Red wine",
              "Grapefruit juice"
            ]
          },
          "description": {
            "type": "string",
            "nullable": true,
            "example": [
              "Red wine is a type of wine made from dark-colored grape varieties. The color of the wine can range from intense violet, typical of young wines, through to brick red for mature wines and brown for older red wines",
              "Grapefruit juice is the juice from grapefruits. It is rich in vitamin C and ranges from sweet-tart to very sour."
            ]
          },
          "alcohol": {
            "type": "boolean",
            "nullable": true,
            "example": [
              true,
              false
            ]
          },
          "type": {
            "$ref": "#/components/schemas/IngredientType"
          },
          "percentage": {
            "type": "number",
            "nullable": true,
            "example": [
              40,
              null
            ]
          },
          "imageUrl": {
            "type": "string",
            "nullable": true,
            "example": [
              "https://cocktails.solvro.pl/images/ingredients/rose.png",
              "https://cocktails.solvro.pl/images/ingredients/pomegranate-juice.png"
            ]
          },
          "createdAt": {
            "type": "string",
            "example": [
              "2024-08-19 18:39:58",
              "2024-08-20 13:19:58"
            ]
          },
          "updatedAt": {
            "type": "string",
            "example": [
              "2024-08-19 18:39:58",
              "2024-08-21 10:12:58"
            ]
          }
        }
      },
      "Cocktail": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": [
              11000,
              11001
            ]
          },
          "name": {
            "type": "string",
            "example": [
              "Mojito",
              "Old Fashioned"
            ]
          },
          "instructions": {
            "type": "string",
            "nullable": true,
            "example": [
              "Muddle mint leaves with sugar and lime juice. Add a splash of soda water and fill the glass with cracked ice. Pour the rum and top with soda water. Garnish and serve with straw",
              "Place sugar cube in old fashioned glass and saturate with bitters, add a dash of plain water. Muddle until dissolved.\r\nFill the glass with ice cubes and add whiskey.\r\n\r\nGarnish with orange twist, and a cocktail cherry"
            ]
          },
          "alcoholic": {
            "type": "boolean",
            "example": [
              true,
              true
            ]
          },
          "category": {
            "$ref": "#/components/schemas/CocktailCategory"
          },
          "glass": {
            "$ref": "#/components/schemas/CocktailGlass"
          },
          "imageUrl": {
            "type": "string",
            "nullable": true,
            "example": [
              "https://cocktails.solvro.pl/images/cocktails/mojito.png",
              "https://cocktails.solvro.pl/images/cocktails/old-fashioned.png"
            ]
          },
          "createdAt": {
            "type": "string",
            "example": [
              "2024-08-19 18:39:58",
              "2024-08-20 13:19:58"
            ]
          },
          "updatedAt": {
            "type": "string",
            "example": [
              "2024-08-19 18:39:58",
              "2024-08-21 10:12:58"
            ]
          }
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "total": {
            "type": "integer",
            "format": "int64",
            "example": [
              133
            ]
          },
          "perPage": {
            "type": "integer",
            "format": "int64",
            "example": [
              15
            ]
          },
          "currentPage": {
            "type": "integer",
            "format": "int64",
            "example": [
              1
            ]
          },
          "lastPage": {
            "type": "integer",
            "format": "int64",
            "example": [
              9
            ]
          },
          "firstPage": {
            "type": "integer",
            "format": "int64",
            "example": [
              1
            ]
          },
          "firstPageUrl": {
            "type": "string",
            "example": [
              "/?page=1"
            ]
          },
          "lastPageUrl": {
            "type": "string",
            "example": [
              "/?page=9"
            ]
          },
          "nextPageUrl": {
            "type": "string",
            "nullable": true,
            "example": [
              "/?page=2"
            ]
          },
          "previousPageUrl": {
            "type": "string",
            "nullable": true,
            "example": [
              "/?page=1"
            ]
          }
        }
      }
    }
  }
